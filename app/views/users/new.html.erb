<h1>New User</h1>

<div class="Create_User">
  <%= form_with scope: :user, url: users_path, local: true do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %><br>
      <%= form.label :surname %><br>
      <%= form.text_field :surname %><br>
      <%= form.label :date_of_birth %><br>
      <%= form.date_field :date_of_birth, class: 'form-control' %><br>
      <%= form.label :gender %><br>
      <%= form.text_field :gender %><br>
      <%= form.label :email_address %><br>
      <%= form.text_field :email_address %><br>
      <%= form.label :encrypted_password %><br>
      <%= form.text_field :encrypted_password %><br>
<!--      <%#= form.label :password_confirmation %><br>-->
<!--      <%#= form.text_field :password_confirmation %><br>-->
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>

  <% if @user.errors.any? %>
    <ul class="Create_User">
      <% for message_error in @user.errors.full_messages %>
        <li>* <%= message_error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
